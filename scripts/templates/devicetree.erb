&ddr {
        microchip,mem-name = "<%= params[:version] %>";
        microchip,mem-speed = <<%= params[:clock_speed] %>>;
        microchip,mem-size = <<%= sprintf("0x%08x", params[:mem_size]) %>>;
        microchip,mem-dq-bits = <<%= params[:dq_bits_used] %>>;

<%- $config.groups.each do |rg| -%>
        microchip,<%= rg[:name] %>-reg = <
<%- rg[:regs].sort.each do |rname| -%>
		<%= hex_values[rname] %>	/* <%= rname.downcase %> */
<%- end -%>
	>;

<%- end -%>
};
